<view class="page-container"><form enctype="multipart/form-data" data-event-opts="{{[['submit',[['formSubmit',['$event']]]]]}}" bindsubmit="__e"><view class="info"><view class="items"><text>头像：</text><image class="petAvatar" name="avatar" src="{{avatar}}" data-event-opts="{{[['tap',[['chooseImage',['$event']]]]]}}" bindtap="__e"></image></view><view class="items"><text>名称：</text><input class="right-align-input" maxlength="6" name="name" placeholder="请输入姓名" value="{{formdata.name}}"/></view><view class="items"><text>品种：</text><input class="right-align-input" maxlength="8" name="variety" placeholder="请输入品种" value="{{formdata.variety}}"/></view><view class="items"><text>性别：</text><radio-group name="radio"><radio class="radio" checked="{{formdata.radio=='man'}}" value="man"><u-icon vue-id="ddb616a4-1" name="man" color="#c76300" size="18" bind:__l="__l"></u-icon></radio><radio class="radio" checked="{{formdata.radio=='woman'}}" value="woman"><u-icon vue-id="ddb616a4-2" name="woman" color="#2979ff" size="18" bind:__l="__l"></u-icon></radio></radio-group></view><view class="items"><text>生日：</text><picker name="date" mode="date" value="{{valueDate}}" start="2010-01-01" end="2030-12-31" data-event-opts="{{[['change',[['onChange',['$event']]]]]}}" bindchange="__e"><view class="picker">{{''+valueDate+''}}</view></picker></view><view class="items"><text>绝育情况：</text><switch style="transform:scale(0.7);" checked="{{formdata.sterilization}}" name="sterilization" color="#FFCC33"></switch></view><view class="items"><text>疫苗接种：</text><switch style="transform:scale(0.7);" checked="{{formdata.vaccine}}" name="vaccine" color="#FFCC33"></switch></view></view><view class="submit"><button form-type="submit">提交信息</button></view></form></view>